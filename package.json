{
  "name": "typescript-template",
  "version": "0.1.0",
  "description": "TypeScript build automation template",
  "author": "Harald Schwab, IMS - FH JOANNEUM <harald.schwab@edu.fh-joanneum.at>",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://git-iit.fh-joanneum.at/ims_exercises/typescript-template"
  },
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc",
    "build:dev": "tsc -p tsconfig.dev.json",
    "build:clean": "npm run clean:dist && npm run build",
    "clean:dist": "rm -rf dist",
    "lint": "tsc --noEmit && eslint \"src/**/*.{js,ts}\" --quiet --fix",
    "prebuild": "npm run lint",
    "start": "node .",
    "start:dev": "nodemon",
    "test": "jest --silent",
    "test:coverage": "jest --coverage --silent",
    "test:watch": "jest --watchAll --silent"
  },
  "_moduleAliases": {
    "@root": ".",
    "@app": "dist/app",
    "@config": "dist/config",
    "@util": "dist/util",
    "@pack": "package.json"
  },
  "keywords": [
    "typescript",
    "node",
    "express",
    "api",
    "micro-service",
    "automation",
    "build",
    "ci",
    "cd",
    "docker"
  ],
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "module-alias": "^2.2.2",
    "typescript-logging": "^1.0.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.9",
    "@types/eslint": "^7.2.6",
    "@types/express": "^4.17.11",
    "@types/jest": "^26.0.20",
    "@types/node": "^14.14.22",
    "@types/supertest": "^2.0.10",
    "@typescript-eslint/eslint-plugin": "^4.14.2",
    "@typescript-eslint/parser": "^4.14.2",
    "eslint": "^7.19.0",
    "jest": "^26.6.3",
    "nodemon": "^2.0.7",
    "supertest": "^6.1.3",
    "ts-jest": "^26.5.0",
    "ts-node": "^9.1.1",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^4.1.3"
  }
}
